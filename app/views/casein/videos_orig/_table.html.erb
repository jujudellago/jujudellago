<!-- Scaffolding generated by Casein v.3.1.7 Yabo-concept custom-->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Title</th>
		<th>Artist</th>
		<th>Year</th>
		<th>Description</th>
		<th>&nbsp;</th>
		<th>&nbsp;</th>
	</tr>
	
	<% videos.each_with_index do |video, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= video.title %></td>
			<td><%= video.artist %></td>
			<td><%= video.year %></td>
			<td><%= video.description %></td>
			
	   		<td class="edit">
	   			<%= link_to(casein_show_row_icon("edit"), casein_video_path(video)) %>
	   		</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_video_path(video), :method => :delete, :confirm => "Are you sure you want to delete this video?") %>
			</td>
		</tr>
	<% end %>
</table>