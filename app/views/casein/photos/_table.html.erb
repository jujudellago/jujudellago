<!-- Scaffolding generated by Casein v.3.1.7 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th></th>
		<th>Legend fr</th>
		<th>Legend en</th>
		<th>&nbsp;</th>
		<th>&nbsp;</th>
		<th>&nbsp;</th>
	</tr>
	
	<% photos.each_with_index do |photo, index| 
		defimg=false
		if (photo.id==@gallery.default_photo_id)
			defimg=true
		end	
	%>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover" id="photo_<%= photo.id.to_s %>">
			<td><%= image_tag(photo.image.url(:tiny)) %></td>
			<td><%= casein_table_cell_link photo.legend_fr, casein_gallery_photo_path(@gallery,photo) %></td>
			<td><%= casein_table_cell_link photo.legend_en, casein_gallery_photo_path(@gallery,photo) %></td>
			<td>
				<%- if defimg -%>
					default image
				<%- else -%>
					<%= casein_table_cell_link "set default", set_default_casein_gallery_photo_path(@gallery,photo), :method => :post %>
				<%- end -%>
			</td>
			<td class="edit">
				<%= link_to(casein_show_row_icon("edit"), casein_gallery_photo_path(@gallery,photo)) %>
			</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_gallery_photo_path(@gallery,photo), :method => :delete, :confirm => "Are you sure you want to delete this photo?",:remote=>true) %>
			</td>
		</tr>
	<% end %>
</table>