			<td><%= casein_table_cell_link gallery_type.label_en, casein_gallery_type_path(gallery_type) %></td>
			<td><%= casein_table_cell_link gallery_type.slug, casein_gallery_type_path(gallery_type) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_gallery_type_path(gallery_type), :method => :delete, :confirm => "Are you sure you want to delete this gallery type?") %>
			</td>
		</tr>
	<% end %>
</table>