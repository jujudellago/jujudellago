	<td><%= gallery.name %></td>
	<td><%= gallery.gallery_type.name %></td>
	<td><%= gallery.label_fr %></td>
	<td><%= gallery.label_en %></td>

	<td><%= link_to "(#{gallery.photos_count}) edit", casein_gallery_photos_path(gallery) %></td>
	<td><%= link_to image_tag(gallery.default_photo.image.url(:tiny)) ,casein_gallery_photos_path(gallery) unless gallery.default_photo.nil? %></td>

	<td class="enabledisable">
	<%- if gallery.enabled? -%>
		<%=  link_to casein_show_row_icon("ledgreen"), enabledisable_casein_gallery_path(gallery,:enabled=>false),:method=>:put,:remote=>true %>
	<%- else -%>	
		<%=  link_to casein_show_row_icon("ledred"), enabledisable_casein_gallery_path(gallery,:enabled=>true),:method=>:put,:remote=>true %>
	<%- end -%>
	</td>
	<td class="edit">
		<%= link_to(casein_show_row_icon("edit"),  casein_gallery_path(gallery)) %>
	</td>
	<td class="delete">
		<%= link_to(casein_show_row_icon("delete"),   casein_gallery_path(gallery), :method => :delete, :confirm => "Are you sure you want to delete this gallery?") %>
	</td>