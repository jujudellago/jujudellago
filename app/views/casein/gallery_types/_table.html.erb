<!-- Scaffolding generated by Casein v.3.1.7 Yabo-concept custom-->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Name</th>
		<th>Label fr</th>
		<th>Label en</th>
		<th>Description fr</th>
		<th>Description en</th>
		<th>&nbsp;</th>
		<th>&nbsp;</th>
	</tr>
	
	<% gallery_types.each_with_index do |gallery_type, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= gallery_type.name %></td>
			<td><%= gallery_type.label_fr %></td>
			<td><%= gallery_type.label_en %></td>
			<td><%= gallery_type.description_fr %></td>
			<td><%= gallery_type.description_en %></td>
			
	   		<td class="edit">
	   			<%= link_to(casein_show_row_icon("edit"), casein_gallery_type_path(gallery_type)) %>
	   		</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_gallery_type_path(gallery_type), :method => :delete, :confirm => "Are you sure you want to delete this gallery type?") %>
			</td>
		</tr>
	<% end %>
</table>