<!-- Scaffolding generated by Casein <%= casein_get_full_version_string %> tweaked by yabo-concept -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<% for attribute in attributes %><th><%= attribute.column.human_name %></th>
		<% end %><th>&nbsp;</th>
	</tr>
	
	<%% row = 1 %>

	<%% for <%= singular_name %> in <%= plural_name %> %>
		<tr class="<%%= casein_table_row_class_name row %> hover">
			<% for attribute in attributes %><td><%= <%= singular_name %>  %></td>
			<% end %>
			<td class="edit">
				<%%= link_to(casein_show_row_icon("edit"), casein_<%= singular_name %>_path(<%= singular_name %>) %>
			</td>
			<td class="delete">
				<%%= link_to(casein_show_row_icon("delete"), casein_<%= singular_name %>_path(<%= singular_name %>), :method => :delete, :confirm => "Are you sure you want to delete this <%= singular_name.humanize.downcase %>?") %>
			</td>
		</tr>
		<%% row += 1 %>
	<%% end %>
</table>




